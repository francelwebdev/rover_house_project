<section class="section">
    <div class="container">
        <div class="columns is-multiline">
            <div class="column is-8">
                <div class="columns is-multiline">
                    <div class="column is-12">
                        <div class="columns is-multiline">
                            <div class="column is-12">
                                <div class="columns is-multiline">
                                    <div class="column is-8">
                                        <h4 class="title is-4">
                                            <%= @property.title.capitalize %>
                                        </h4>
                                    </div>
                                    <div class="column is-4">
                                        <% if @property.ad_type.name == "Location" %>
                                        <h3 class="title is-4">
                                            <%= number_with_delimiter(@property.price)  %>&nbsp; <sup>f/mois</sup>
                                        </h3>
                                        <% elsif @property.ad_type.name == "Vente" %>
                                        <h3 class="title is-4">
                                            <%= number_with_delimiter(@property.price)  %>&nbsp; <sup>f</sup>
                                        </h3>
                                        <% end %>
                                    </div>
                                </div>
                                <hr class="is-marginless">
                                <div class="column is-12">
                                    <p>
                                        <i class="fas fa-map-marker-alt fa-lg"></i>&nbsp;
                                        <%= @property.country.name.capitalize %> - <%= @property.address.capitalize %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="column is-12">
                        <div class="owl-carousel owl-theme owl-property-show-page">
                            <% if @property.photos.present? %>
                            <% @property.photos.each do |pt| %>
                            <div class="item">
                                <figure class="image">
                                    <%= image_tag(pt.url) %>
                                </figure>
                            </div>
                            <% end %>
                            <% else %>
                            <p>ANNONCE SANS PHOTO</p>
                            <% end %>
                        </div>
                    </div>
                    <div class="column is-12">
                        <div class="tabs-wrapper">
                            <div class="tabs">
                                <ul>
                                    <li class="is-active">
                                        <a>Description</a>
                                    </li>
                                    <li>
                                        <a>DÃ©tail</a>
                                    </li>
                                    <li>
                                        <a>Localisation</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="tabs-content">
                                <ul>
                                    <li class="is-active">
                                        <h1>Pictures</h1>
                                    </li>
                                    <li>
                                        <h1>Music</h1>
                                    </li>
                                    <li>
                                        <h1>Videos</h1>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column is-4">
                <div class="box">
                    <h3 class="title">Contacter</h3>
                    <%= form_with url: root_path, local: true do |f| %>
                    <div class="columns is-multiline">
                        <div class="column is-12">
                            <div class="field">
                                <div class="control">
                                    <%= f.text_field :first_name, class: "input"  %>
                                </div>
                            </div>
                        </div>
                        <div class="column is-12">
                            <div class="field">
                                <div class="control">
                                    <%= f.text_field :last_name, class: "input"  %>
                                </div>
                            </div>
                        </div>
                        <div class="column is-12">
                            <div class="field">
                                <div class="control">
                                    <%= f.phone_field :last_name, class: "input"  %>
                                </div>
                            </div>
                        </div>
                        <div class="column is-12">
                            <div class="field">
                                <div class="control">
                                    <%= f.email_field :last_name, class: "input"  %>
                                </div>
                            </div>
                        </div>
                        <div class="column is-12">
                            <div class="field">
                                <div class="control">
                                    <%= f.text_area :body, class: "textarea"  %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%= f.submit "Envoyer", class: "button is-marron"  %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>

