<div class="jumbotron jumbotron-fluid mb-0 py-3 jumbotron-search-result">
  <div class="container">
    <!-- <h1>Recherche avancé</h1> -->
    <!-- <p>Trouvez la meilleure maison pour votre famille.</p> -->
    <div class="card">
    <div class="card-body">
          <%= simple_form_for "", url: search_properties_path , method: :get do |f| %>
          <div class="form-row">
            <div class="col-lg-4">
              <%= f.input :property_type, collection: Property::PROPERTY_TYPES, required: false, label: false, prompt: "Choisissez le type de biens", input_html: {class: "form-control-lg"} %>
            </div>
            <div class="col-lg-4">
              <%= f.input :ad_type, collection: Property::AD_TYPES, label: false, prompt: "Choisissez le type d'annonce", input_html: {class: "form-control-lg"} %>
            </div>
            <div class="col-lg-4">
              <%= f.input :country, collection: Property::COUNTRIES, label: false, prompt: "Choisissez un pays", input_html: {class: "form-control-lg"} %>
            </div>

            <div class="col-lg-4">
              <%= f.input :city, label: false, placeholder: "Ville", input_html: {class: "form-control-lg"} %>
            </div>

            <div class="col-lg-2">
              <%= f.input :min_price, as: :integer, label: false, placeholder: "Prix minimal", input_html: {class: "form-control-lg"} %>
            </div>

            <div class="col-lg-2">
              <%= f.input :max_price, as: :integer, label: false, placeholder: "Prix maximum", input_html: {class: "form-control-lg"} %>
            </div>

            <div class="col-lg-2">
              <%= f.input :min_area, as: :integer, label: false, placeholder: "Surface minimal", input_html: {class: "form-control-lg"} %>
            </div>

            <div class="col-lg-2">
              <%= f.button :button, class: "btn btn-marron btn-block btn-lg btn-rechercher" do %>
              <i class="fas fa-search"></i>
              <% end %>
            </div>
          </div>
          <% end %>
        </div>
    </div>
  </div>
</div>

<section class="container-fluid py-5">
  <div class="container">
    <div class="row">

      <% if @properties.present? %>
      <div class="col-lg-12">
        <p>
          <%= pluralize(@properties.count, "résultat") %> trouvées pour votre recherche.
        </p>
      </div>
      <% @properties.each do |property| %>
      <div class="col-lg-4">
        <div class="card"
        style="border-bottom: 3px solid #5d4037; border-bottom-right-radius: 10px; border-bottom-left-radius: 10px;">
        <%= image_tag property.photos.first, class: "card-img-top"  %>
        <% if property.ad_type.name == "A louer" %>
        <p class="h4" style="position: absolute; top: 10px; left: 10px;">
          <span class="badge badge-light">
            A louer
          </span>
        </p>
        <% elsif property.ad_type.name == "A vendre" %>
        <p class="h4" style="position: absolute; top: 10px; left: 10px;">
          <span class="badge badge-light">
            A vendre
          </span>
        </p>
        <% end %>
        <div class="card-body">
          <h5 class="card-title">
            <%= property.property_type.name + " - " + property.area.to_s %>m<sup>2</sup></%>
          </h5>
          <p class="card-text">
            <i class="fas fa-map-marker-alt"></i>&nbsp;
            <%= property.country.name.capitalize %> - <%= property.city.capitalize %>
          </p>
          <p class="card-text h4">
            <strong>
              <%= number_with_delimiter(property.price) %> <sup>f/mois</sup>
            </strong>
          </p>
          <p class="card-text text-right">
            <%= link_to "Détail", property, class: "btn btn-marron stretched-link" %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
    <% else %>
    <div class="col-lg-12">
      <p>
        <%= pluralize(@properties.count, "résultat") %> trouvées pour votre recherche.
      </p>
    </div>
    <% end %>

    <div class="col-lg-12">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
</section>