<section class="hero mon-hero-bgi-home is-large">
  <div class="hero-body">
    <div class="container">
      <h1 class="title is-1 has-text-white">
        Bienvenue sur <strong>ROVER HOUSE</strong>
      </h1>
      <h2 class="subtitle has-text-white">
        Trouvez la meilleure maison pour votre famille.
      </h2>
      <%= simple_form_for :search, url: search_properties_path, method: :get do |f| %>
      <div class="columns is-multiline">
        <div class="column is-3">
          <div class="field">
            <div class="control">
              <%= f.input_field :ad_type, class: "input is-medium" %>
            </div>
          </div>
        </div>
        <div class="column is-3">
          <div class="field">
            <div class="control">
              <%= f.input_field :property_type, class: "input is-medium"  %>
            </div>
          </div>
        </div>
        <div class="column is-3">
          <div class="field">
            <div class="control">
              <%= f.input_field :location, class: "input is-medium"  %>
            </div>
          </div>
        </div>
        <div class="column is-3">
          <div class="field">
            <div class="control">
              <%= f.button :submit, "Rechercher", class: "button is-marron is-medium" %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <p class="">
        <a class="has-text-white">Recherche avancer</a>
      </p>
