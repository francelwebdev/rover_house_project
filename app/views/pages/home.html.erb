        <div class="box">
          <%= form_with url: search_path, method: :get, local: true do |f| %>
          <div class="columns is-multiline">
            <div class="column is-3 is-paddingless">
              <div class="field">
                <%= f.label :ad_type, "Vous souhaitez ?", class: "label has-text-left"  %>
                <div class="control is-expanded">
                  <div class="select is-fullwidth">
                  <%= f.select :ad_type, {"Louer un biens" => "Location", "Acheter un biens" => "Vente"}.sort, include_blank: true %>
                  </div>
                </div>
              </div>
            </div>
            <div class="column is-3 is-paddingless">
              <div class="field">
                <%= f.label :property_type, "Quel type de biens ?", class: "label has-text-left"  %>
                <div class="control is-expanded">
                  <div class="select is-fullwidth">
                  <%= f.select :property_type, @property_types.collect {|pt| [pt.name, pt.name]}, include_blank: true %>
                  </div>
                </div>
              </div>
            </div>
            <div class="column is-4 is-paddingless">
              <div class="field">
                <%= f.label :location, "Où ?", class: "label has-text-left"  %>
                <div class="control">
                  <%= f.text_field :location, placeholder: "Saisissez le nom d'un pays ou d'une ville", class: "input is-radiusless"  %>
                </div>
              </div>
            </div>
            <div class="column is-2 is-paddingless">
              <div class="field">
                <div class="control">
                  <%= f.submit "Rechercher", class: "button is-marron is-fullwidth is-radiusless button-recherche" %>
                </div>
              </div>
            </div>
          </div>
          <% end %>
