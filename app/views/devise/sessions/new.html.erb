<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <div class="column is-4 is-offset-4">
        <!-- <h2 class="title has-text-centered"><%#= t(".sign_in") %></h2> -->
        <h2 class="title has-text-centered">Log in</h2>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <div class="column is-4 is-offset-4">
        <div class="box">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: "label" %>
            <div class="control">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "Email" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :password, class: "label" %>
            <div class="control">
              <%= f.password_field :password, autocomplete: "current-password", class: "input", placeholder: "Mot de passe" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
          <div class="field">
            <div class="control">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "checkbox" %>
            </div>
          </div>
          <% end %>

          <div class="field">
            <div class="control">
              <%= f.submit "Log in", class: "button is-marron is-fullwidth" %>
            </div>
          </div>
          <% end %>
        </div>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </section>
