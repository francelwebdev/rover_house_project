<!DOCTYPE html>
<html lang="<%= I18n.locale %>">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= display_meta_tags site: 'Rover House' %>
  <%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'admin', 'data-turbolinks-track': 'reload' %>
</head>

<body class="<%= controller_name + '/' + action_name %>">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top flex-nowrap p-0 shadow">
    <a class="navbar-brand col-lg-2 mr-0" href="#">ADMINISTRATION</a>

    <div class="collapse navbar-collapse px-3" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto ">
        <li class="nav-item">
          <%= link_to "Voir le site", root_path, class: "nav-link", target: "_blank" %>

        </li>
        <!-- <li class="nav-item dropdown"> -->
          <%#= link_to current_user.name.first.capitalize, edit_user_registration_path, class: "nav-link dropdown-toggle", id: "navbarDropdown", role: "button", "data-toggle" => "dropdown", "aria-haspopup" => "true", "aria-expanded" => "false" %>
          <!-- <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown"> -->
            <%#= link_to 'Mon profile', admin_profile_path, :class => 'dropdown-item' %>
            <%#= link_to 'Mon compte', edit_admin_user_registration_path, :class => 'dropdown-item' %>
            <!-- <div class="dropdown-divider"></div> -->
            <%#= link_to "Déconnexion", destroy_user_session_path, method: :delete, :class => 'dropdown-item', data: {confirm: "Are your sûre ?"}, id: "deconnexion"  %>
          <!-- </div> -->
        </li>
        <li class="nav-item">
          <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, :class => 'dropdown-item', data: {confirm: "Are your sûre ?"}, id: "deconnexion", class: "nav-link"  %>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <nav class="col-lg-2 d-none d-md-block bg-light sidebar">
        <div class="sidebar-sticky">
          <h6 class="px-3 pt-3 pb-2 font-weight-bold">
            MENU
            <!-- <span>MENU</span>
              <a class="d-flex align-items-center text-muted" href="#">
                <span data-feather="plus-circle"></span>
              </a> -->
            </h6>
            <ul class="nav flex-column">
              <li class="nav-item">
                <%= link_to "Tableau de bord", admin_root_path, class: "nav-link active text-dark" %>
              </li>
              <li class="nav-item">
                <%= link_to "Les utilisateurs", admin_users_path, class: "nav-link text-dark" %>
              </li>
              <li class="nav-item">
                <%= link_to "Les biens immobilières", admin_properties_path, class: "nav-link text-dark" %>
              </li>
            </ul>
          </div>
        </nav>

        <main role="main" class="col-lg-10 ml-auto">

          <% if flash[:notice] %>
          <div class="alert alert-success mb-0 rounded-0" role="alert">
            <p class="text-center mb-0">
              <%= flash[:notice] %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </p>
          </div>
          <% elsif flash[:alert] %>
          <div class="alert alert-danger mb-0 rounded-0" role="alert">
            <p class="text-center mb-0">
              <%= flash[:alert] %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </p>
          </div>
          <% end %>
          
          <%= yield %>
        </main>
      </div>
    </div>
  </body>

  </html>